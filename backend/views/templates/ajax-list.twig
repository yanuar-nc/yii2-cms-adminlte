<div class="box">

	<div class="box-header">
      	<h3 class="box-title">{{ this.params['title'] }}</h3> 
      	<div class="pull-right">
      		{% if disabledInsertNewItem is empty %}
	      		{{ this.render('/partials/button/insert-default.twig' ) | raw }}
      		{% endif %}
      	</div>
    </div>
	<!-- /.box-header -->
	<div class="box-body">
		<table class="table table-striped table-bordered table-hover {{ id is empty ? 'dataTableAjax' : '' }}" class="">
			<thead>
				<tr>
					{% for header in headers %}
						<th>{{ header }}</th>
					{% endfor %}
				</tr>
			</thead>
			<tbody>
			</tbody>
			<tfoot>
				<tr>
					{% for header in headers %}
						<th>{{ header }}</th>
					{% endfor %}
				</tr>
			</tfoot>
		</table>
	</div>
<!-- /.box-body -->
</div>